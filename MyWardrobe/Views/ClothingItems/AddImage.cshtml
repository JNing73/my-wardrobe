@model MyWardrobe.Models.ClothingItem

@{
    ViewData["Title"] = "Add Image";
}

<h1>Add Image</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" enctype="multipart/form-data"> <!-- setup to allow sending of file data -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Pass in the other property values for model validation -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="BrandId" />
            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="Size" />
            <input type="hidden" asp-for="Description" />

            <!-- input element for file upload-->
            <div class="form-group">
                <label asp-for="ImageFileName" class="control-label"></label>
                <input asp-for="ImageFileName" class ="form-control" type="file" accept="image/png, image/jpeg" /> 
            </div>
            <div class="form-group">
                <input type="submit" value="Add Image" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
